generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int      @id @default(autoincrement())
  firstName       String?
  lastName        String?
  email           String   @unique
  username        String   @unique 
  phone           String?  @unique
  password        String
  role            Role     @default(customer)
  avatar          String?
  wallet          Float    @default(0)
  isEmailVerified Boolean  @default(false)
  isPhoneVerified Boolean  @default(false)
  createdAt       DateTime @default(now())

  // relations
  barber            Barber? // one-to-one (Barber.userId is unique)
  address           Address?      @relation("UserAddress", fields: [addressId], references: [id])
  addressId         Int?          @unique
  appointmentsOwned Appointment[] @relation("customerAppointments")
  reviews           Review[]
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  landmark  String?
  city      String
  state     String
  country   String   @default("India")
  pincode   String
  lat       Float
  lng       Float
  createdAt DateTime @default(now())

  user   User?       @relation("UserAddress")
  barber Barber?     @relation("BarberAddress")
  shop   BarberShop? @relation("ShopAddress")
}

model Barber {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  addressId Int?     @unique
  address   Address? @relation("BarberAddress", fields: [addressId], references: [id])

  status Status @default(pending)

  subscriptionId Int?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])

  rating      Float @default(0)
  ratingCount Int   @default(0)

  shop       BarberShop?
  bankDetail Bank?
  documents  BarberDocument[]

  services     Service[]
  appointments Appointment[] @relation("barberAppointments")
  reviews      Review[]

  createdAt DateTime @default(now())
}

model BarberShop {
  id       Int    @id @default(autoincrement())
  barberId Int    @unique
  barber   Barber @relation(fields: [barberId], references: [id])

  addressId Int?     @unique
  address   Address? @relation("ShopAddress", fields: [addressId], references: [id])

  shopName    String
  description String?
  licenseNo   String? // optional: for govt license
  shopType    String? // salon / menâ€™s / unisex
  openingTime String?
  closingTime String?

  // photos (array of urls)
  photos String[] // shop interior/exterior

  createdAt DateTime @default(now())
}

model Bank {
  id       Int    @id @default(autoincrement())
  barberId Int    @unique
  barber   Barber @relation(fields: [barberId], references: [id])

  accountHolderName String?
  accountNumber     String?
  ifsc              String?
  bankName          String?
  upiId             String? // optional
  gstNumber         String? @unique
  aadhaarNumber     String? @unique
  panNumber         String? @unique

  createdAt DateTime @default(now())
}

model BarberDocument {
  id         Int          @id @default(autoincrement())
  barberId   Int
  barber     Barber       @relation(fields: [barberId], references: [id])
  type       DocumentType
  url        String
  name       String? // optional original filename
  uploadedAt DateTime     @default(now())
}

model Service {
  id              Int           @id @default(autoincrement())
  barberId        Int
  barber          Barber        @relation(fields: [barberId], references: [id])
  title           String
  price           Float
  durationMinutes Int
  description     String?
  createdAt       DateTime      @default(now())
  appointments    Appointment[]
}

model Appointment {
  id            Int        @id @default(autoincrement())
  customerId    Int
  customer      User       @relation("customerAppointments", fields: [customerId], references: [id])
  barberId      Int
  barber        Barber     @relation("barberAppointments", fields: [barberId], references: [id])
  serviceId     Int?
  service       Service?   @relation(fields: [serviceId], references: [id])
  startAt       DateTime
  endAt         DateTime?
  status        ApptStatus @default(pending)
  paymentAmount Float?
  paymentMethod String?
  paid          Boolean    @default(false)
  createdAt     DateTime   @default(now())
}

model Review {
  id         Int      @id @default(autoincrement())
  barberId   Int
  barber     Barber   @relation(fields: [barberId], references: [id])
  customerId Int
  customer   User     @relation(fields: [customerId], references: [id])
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())
}

model Subscription {
  id            Int      @id @default(autoincrement())
  name          String
  pricePerMonth Float
  features      String[] // PostgreSQL text array
  createdAt     DateTime @default(now())
  barbers       Barber[]
}

model Otp {
  id        Int      @id @default(autoincrement())
  to        String
  via       OtpVia
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  customer
  barber
  admin
  superAdmin
}

enum Status {
  pending
  approved
  rejected
}

enum ApptStatus {
  pending
  accepted
  rejected
  completed
  cancelled
}

enum DocumentType {
  AADHAAR
  PANCARD
  GST_CERT
  SHOP_PHOTO
  BANK_PROOF
  OTHER
}

enum OtpVia {
  EMAIL
  SMS
}
