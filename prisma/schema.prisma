generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  phone     String?  @unique
  password  String
  role      Role     @default(customer)
  avatar    String?
  wallet    Float    @default(0)
  createdAt DateTime @default(now())

  // relations
  // one-to-one: a User can have zero or one Barber profile
  barber Barber? // Barber holds the foreign key (userId @unique)

  // appointments where the user is the customer
  appointmentsOwned Appointment[] @relation("customerAppointments")
  reviews           Review[]
  // optional address for customers can be added if needed (left out for simplicity)
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  landmark  String?
  city      String
  state     String
  country   String   @default("India")
  pincode   String
  lat       Float
  lng       Float
  createdAt DateTime @default(now())

  // No explicit back relations here to keep relations simple.
  // Barber or User reference Address via addressId on their models.
  barbers Barber[]
}

model Barber {
  id Int @id @default(autoincrement())

  // one-to-one -> userId must be unique so one user has at most one barber profile
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  shopName    String
  description String?

  // address as optional relation (many barbers could share same Address model if desired)
  addressId Int?
  address   Address? @relation(fields: [addressId], references: [id])

  workingHours Json?
  status       Status @default(pending)

  // many-to-one: many barbers can have the same subscription plan
  subscriptionId Int?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])

  rating      Float @default(0)
  ratingCount Int   @default(0)

  services  Service[]
  createdAt DateTime  @default(now())

  // appointments where the user is the barber
  appointments Appointment[] @relation("barberAppointments")
  reviews      Review[]
}

model Service {
  id              Int      @id @default(autoincrement())
  barberId        Int
  barber          Barber   @relation(fields: [barberId], references: [id])
  title           String
  price           Float
  durationMinutes Int
  description     String?
  createdAt       DateTime @default(now())

  // opposite relation for Appointment.service
  appointments Appointment[]
}

model Appointment {
  id Int @id @default(autoincrement())

  customerId Int
  customer   User @relation("customerAppointments", fields: [customerId], references: [id])

  barberId Int
  barber   Barber @relation("barberAppointments", fields: [barberId], references: [id])

  serviceId Int?
  service   Service? @relation(fields: [serviceId], references: [id])

  startAt DateTime
  endAt   DateTime?
  status  ApptStatus @default(pending)

  paymentAmount     Float?
  paymentMethod     String?
  razorpayOrderId   String?
  razorpayPaymentId String?
  paid              Boolean @default(false)

  createdAt DateTime @default(now())
}

model Review {
  id         Int      @id @default(autoincrement())
  barberId   Int
  barber     Barber   @relation(fields: [barberId], references: [id])
  customerId Int
  customer   User     @relation(fields: [customerId], references: [id])
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())
}

model Subscription {
  id            Int      @id @default(autoincrement())
  name          String
  pricePerMonth Float
  features      String[] // PostgreSQL text array
  createdAt     DateTime @default(now())

  // many barbers can have same plan
  barbers Barber[]
}

model Otp {
  id           Int      @id @default(autoincrement())
  phoneOrEmail String
  code         String
  expiresAt    DateTime
  used         Boolean  @default(false)
  createdAt    DateTime @default(now())
}

enum Role {
  customer
  barber
  admin
}

enum Status {
  pending
  approved
  rejected
}

enum ApptStatus {
  pending
  accepted
  rejected
  completed
  cancelled
}
